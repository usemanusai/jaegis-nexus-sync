FROM python:3.12-slim
WORKDIR /app
COPY packages/research-backend/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt && python -m playwright install --with-deps chromium || true
COPY packages/research-backend /app
ENV REDIS_URL=redis://redis:6379
ENV RAG_INGEST_URL=http://rag:33001/api/v1/ingest
EXPOSE 33011
CMD ["uvicorn","app.main:app","--host","0.0.0.0","--port","33011"]

