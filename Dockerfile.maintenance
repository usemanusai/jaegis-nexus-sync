# NexusSync Maintenance Service Dockerfile
FROM node:22-alpine
WORKDIR /app
# Copy package manifests
COPY package.json package-lock.json* .npmrc* ./
COPY packages ./packages
# Install and build
RUN npm install --no-audit --no-fund \
 && npm run -w packages/maintenance-service build
EXPOSE 33041
CMD ["node", "packages/maintenance-service/dist/main.js"]

